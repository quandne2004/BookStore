@model BookDisplayModel
@{
   
    Layout = "_Layout";
}

<div class="my-2">
 <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
 

  <div class="col-12">
    <label class="visually-hidden" for="inlineFormSelectPref">Gernes</label>
    <select class="form-select" id="gerneId" name="gerneId">
      <option selected>Gerne</option>
                @foreach(var gerne in Model.Gernes)
                {
                    <option value="@gerne.Id">@gerne.GerneName</option>

                }
               

    </select>
  </div>
    <div class="col-12">
    <label class="visually-hidden" for="inlineFormInputGroupUsername">Search by title</label>
    <div class="input-group">
      <div class="input-group-text"></div>
      <input type="text" class="form-control" id="sterm" name="sterm" placeholder="Search by title">
    </div>
  </div>



  <div class="col-12">
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="/Home/Index" class="btn btn-dark">Reset</a>
  </div>
</form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach(var book in Model.Books){
<div class="card mx-3 mb-4" style="width: 16rem;">
            @if (string.IsNullOrEmpty(book.Image))
            {
                <img style="width:100%;height:180px" src="/images/m80.png" class="card-img-top" alt="...">
            }
            else
            {
                <img style="width:100%;height:180px" src="/images/@book.Image" class="card-img-top" alt="...">
            }

  <div class="card-body">
    <h5 class="card-title"> @book.BookName</h5>
    <p class="card-text">
        Gerne:@book.GerneName
                </p>
                <p class="card-text">
        Author:@book.AuthorName
        </p>
                <p class="card-text">
        Price:@book.Price
        </p>
   
    <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add To Cart</button>
  </div>
</div>
    }
</div>

@section Scripts{
    <script>
      
        async function add(bookId){
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/Identity/Account/Login";
                // var username = usernameEl.innerText;
                //if (username.length < 1) {
                //  window.location.href = "/IdentitSy/Account/Login";
                //}
            }
    try {
        var response = await fetch(`/Cart/AddItem?bookId=${bookId}`);
        if (response.status == 200) {
            var result = await response.json();
            console.log(result);
            var cartCountEl = document.getElementById("cartCount");
            cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
        }
    }
    catch (err) {
        console.log(err);
    }
        }
    </script>
}
